<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title">
                <h2>Sản phẩm mới</h2>
            </div>
            <div class="see">
                <p><a href="/san-pham">Xem tất cả</a></p>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    @foreach (var item in listNewProducts)
    {
        var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;

        <div class="col-lg-3 ">

            <div class="featured__item">
                <div class="featured__item__pic set-bg" data-setbg="@item.Image">
                    @*<a href="@url"><img src="@item.Image" alt="@item.Name" /></a>*@
                    <ul class="featured__item__pic__hover">
                        <li><a href="@url"><i class="fa fa-info"></i></a></li>
                        <li><a href="/them-gio-hang?productId=@item.ID&quantity=1"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="featured__item__text">

                    <h5><a href="@url">@item.Name</a></h5>
                    <h5>@item.Price.GetValueOrDefault(0).ToString("N0")đ</h5>
                    @*<h5>@(item.Price.HasValue ? item.Price.Value.ToString("No"):"Liên hệ")</h5>*@
                </div>
            </div>
        </div>
    }

</div>
